<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ComicNumberSpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dialog</item>
        <item name="android:prompt">@string/comic_number</item>
        <item name="android:background">@drawable/round_btn_shape</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
